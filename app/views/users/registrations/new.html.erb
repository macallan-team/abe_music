<div class="container">
<div class="col-sm-4"></div>
<div class="col-sm-4 wrap">
<h2>新規登録</h2>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="row flex">
  <div class="col-sm-2"></div><div class="col-sm-1 grey">
  </div>
  <div class="col-sm-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
      <div class="col-xs-4">
    <label>氏名</label>
      </div>
      <%= f.text_field :last_name, :style=>"width:70px;" %>
      <%= f.text_field :first_name, :style=>"width:70px;" %>
  </div>

  <div class="field">
      <div class="col-xs-4">
    <label>フリガナ</label>
      </div>
      <%= f.text_field :last_kana, :style=>"width:70px;" %>
      <%= f.text_field :first_kana, :style=>"width:70px;" %>
  </div>

  <div class="field">
      <div class="col-xs-4">
    <label>メールアドレス</label>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
      <div class="col-xs-4">
    <label>パスワード</label>
      </div>
      <%= f.password_field :password, autocomplete: "new-password" %> <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
      <div class="col-xs-4">
    <label>パスワード確認</label>
  </div>
<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

    <%= f.submit "登録" %>
  </div>
<% end %>

</div><!-- col-sm-4 -->
<div class="col-sm-1"></div>
</div><!-- row*************** -->


</div><!-- wrap -->
<div class="col-sm-4"></div>
</div><!-- container -->